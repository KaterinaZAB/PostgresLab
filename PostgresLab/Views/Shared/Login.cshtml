@model PostgresLab.ViewModels.LoginViewModel

@{
    ViewData["Area"] = "LoginArea";
}
<link rel="stylesheet" href="/css/style.css" asp-append-version="true"/>

<div class="grid_right">
    <form method="post" asp-controller="Account" asp-action="Login">
        <div class="grid_right__form">
            <div class="form_input">
                <div class="input_text">Введите логин</div>
                <input asp-for="Login" type="text" class="input" placeholder="логин">
                <span asp-validation-for="Login"></span>
            </div>
            <div class="form_input">
                <div class="input_text">Введите пароль</div>
                <input asp-for="Password" type="password" class="input" placeholder="пароль">
                <span asp-validation-for="Password"></span>
            </div>
            <input type="submit" value="Войти" class="auth_button">
        </div>
    </form>
</div>
